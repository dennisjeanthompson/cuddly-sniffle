# NPM Configuration for Production Builds
# Optimize for Render deployment

# Use legacy peer deps to avoid resolution conflicts
legacy-peer-deps=true

# Optimize for faster installs
prefer-offline=true
fetch-timeout=60000
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Use the latest npm registry
registry=https://registry.npmjs.org/

# Audit settings
audit-level=moderate
